= semantic_form_for [@project, @record] do |f|
  = f.semantic_errors
  = f.inputs do
    = f.input :project, collection: @projects
    = f.input :begun_at, label: 'Beginn'
    = f.input :ended_at, label: 'Ende'
  = f.actions do
    = f.action :submit, as: :button, label: 'Speichern', button_html: { class: 'btn btn-primary' }
    = f.action :cancel, as: :link, label: 'Abbrechen', button_html: { class: 'btn btn-default' }
